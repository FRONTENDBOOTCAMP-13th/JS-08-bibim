{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "gitmoji.addCustomEmoji": [
    {
      "emoji": "🎨",
      "code": ":feat:",
      "description": "코드 구조/형식 개선, 기능 개발"
    },
    {
      "emoji": "💄",
      "code": ":style:",
      "description": "UI 및 스타일 파일 추가/업데이트"
    },
    {
      "emoji": "✅",
      "code": ":add:",
      "description": "파일 추가"
    },
    {
      "emoji": "♻️",
      "code": ":refactor:",
      "description": "코드 리팩토링, 접근성 개선"
    },
    {
      "emoji": "🔀",
      "code": ":merge:",
      "description": "브랜치 병합"
    },
    {
      "emoji": "🐛",
      "code": ":fix:",
      "description": "에러 수정, (에러가 없지만) 기능에 문제 있는 경우"
    },
    {
      "emoji": "🩹",
      "code": ":modify:",
      "description": "에러 없는 모든 수정 사항"
    },
    {
      "emoji": "🚨",
      "code": ":emg:",
      "description": "긴급 수정 사항"
    },
    {
      "emoji": "📝",
      "code": ":docs:",
      "description": "문서 추가 또는 업데이트"
    },
    {
      "emoji": "🔧",
      "code": ":set:",
      "description": "초기 설정 또는 구성 파일 변경 작업에 사용"
    },
    {
      "emoji": "🚀",
      "code": ":deploy:",
      "description": "배포 브랜치 병합"
    },
    {
      "emoji": "🔒",
      "code": ":sec:",
      "description": "보안, 인증, 권한 관련 작업 시 사용"
    },
    {
      "emoji": "🚚",
      "code": ":chore:",
      "description": "리소스 이동 또는 이름 변경"
    }
  ],
  "gitmoji.onlyUseCustomEmoji": true
}